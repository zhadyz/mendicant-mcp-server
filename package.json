  },
  "homepage": "https://github.com/zhadyz/mendicant-mcp-server#readme",
  "bugs": {
    "url": "https://github.com/zhadyz/mendicant-mcp-server/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "openai": "^4.104.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
